{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": false,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  }
}
